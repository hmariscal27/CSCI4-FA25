import numpy as np

def euclidean_distance(point1, point2):
    """
    Calculate the Euclidean distance between two points.
    Points can be lists, tuples, or NumPy arrays of equal length.
    """
    # Convert to NumPy arrays
    p1 = np.array(point1, dtype=float)
    p2 = np.array(point2, dtype=float)

    # Validate dimensions
    if p1.shape != p2.shape:
        raise ValueError("Points must have the same dimensions.")

    # Compute Euclidean distance
    return np.linalg.norm(p1 - p2)

if __name__ == "__main__":
    try:
        # Example: User input for 2D or 3D points
        raw1 = input("Enter coordinates of first point (comma-separated): ")
        raw2 = input("Enter coordinates of second point (comma-separated): ")

        # Convert input strings to lists of floats
        point1 = [float(x.strip()) for x in raw1.split(",")]
        point2 = [float(x.strip()) for x in raw2.split(",")]

        # Calculate and display distance
        distance = euclidean_distance(point1, point2)
        print(f"Euclidean distance: {distance:.4f}")

    except ValueError as e:
        print(f"Error: {e}")
    except Exception as e:
        print(f"Unexpected error: {e}")
